<script>
    function goToLink(matchId) {
        window.location.href = '/Cyphers/cyphersMatchINFO?matches=' + matchId;
    }
    function cyphersMain(nickname) {
        window.location.href = '/Cyphers/cyphersMain?username=' + nickname;
