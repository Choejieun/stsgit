<%int i = 0; %>
<%int k = 0; %>
 <c:forEach var="Matches" items="${PartyInfoArray}">
<c:if test="${not empty Matches.playInfo.partyInfo}"> <!-- 파티or솔로 검사 -->

  <c:if test="${Matches.playInfo.result eq 'lose'}"> <!-- 패배 -->
	 		<c:forEach var="partInfo" items="${Matches.playInfo.partyInfo}"> <!-- 파티원 찾기 -->
				${partInfo.nickname};  <!-- 파티원-->
						 <script type="text/javascript">
        // Ajax 요청을 보내고 응답을 처리합니다.
        var xhr = new XMLHttpRequest();
        xhr.open("GET", "/your-api-endpoint", true);
        xhr.onreadystatechange = function () {
            if (xhr.readyState == 4 && xhr.status == 200) {
                var partyInfo = JSON.parse(xhr.responseText);
                var array = []; // 값을 저장할 배열

                // 파티원의 닉네임을 배열에 추가하는 과정
                for (var i = 0; i < partyInfo.length; i++) {
                    var nickname = partyInfo[i].nickname; // 파티원의 닉네임을 가져옴

                    // 배열에 동일한 닉네임이 있는지 확인하고, 없으면 배열에 추가
                    if (!array.includes(nickname)) {
                        array.push(nickname);
                    }
                }

                // 배열 내용 출력
                document.write("Array: " + array);
                // 배열의 길이 출력
                document.write("Array Length: " + array.length);
                document.write("패배"); // 패배 출력
            }
        };
        xhr.send();
    </script>
					</c:forEach><!-- 파티원 찾기 -->
 				<%i= i+1;	%>
				<%=i %>
				패배<br>
  </c:if><!-- 패배 -->
  
   <c:if test="${Matches.playInfo.result ne 'lose'}"><!-- 승리 -->
	 		<c:forEach var="partInfo" items="${Matches.playInfo.partyInfo}"> <!-- 파티원 찾기 -->
				${partInfo.nickname};  <!-- 파티원-->
			</c:forEach><!-- 파티원 찾기 -->
 				<%k= k+1;	%>
				<%=k %>
				승리<br>
  </c:if><!-- 승리 -->
  
</c:if>  <!-- 파티or솔로 검사 -->
 </c:forEach>
